{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "lib": ["ESNext"],
    "baseUrl": ".",
    "rootDir": "./src",
    "paths": {
      "@api/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist"
  },
  "include": ["src"],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
