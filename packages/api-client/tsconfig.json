{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "rootDir": "src",
    "paths": {
      "@api/*": ["../../apps/api/src/*"],
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo"
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules"]
  },
  "include": ["src"]
}
